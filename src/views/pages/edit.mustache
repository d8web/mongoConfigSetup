{{>partials/header}}

<fieldset>
    <legend>Editando usuário</legend>
    <form method="POST" action="/edituser">
        <input type="text" name="firstname" placeholder="Digite seu primeiro nome" value={{userData.name.firstName}} />
        <input type="text" name="lastname" placeholder="Digite seu último nome" value={{userData.name.lastName}} />
        <input type="email" name="email" placeholder="Digite seu email" value={{userData.email}} />
        <input type="text" name="age" placeholder="Digite sua idade" value={{userData.age}} />
        <input type="text" name="interests" placeholder="Digite seus interesses (separado por vírgula)" value={{userData.interests}} />
        <input type="hidden" name="id" value={{id}} />
        <input type="submit" value="Enviar"/>
    </form>
</fieldset>

{{>partials/footer}}